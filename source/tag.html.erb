---
pageable: true
per_page: 6
---
<h1>Articles tagged '<%= tagname %>'</h1>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<ul id="suggested-reading">
  <% page_articles.each_slice(3) do |articles| %>
    <div class="suggested-reading-row">
      <% articles.each do |article| %>
        <li class="suggested-reading-card">
          <h2>
            <%= link_to article.title, article %>
            <span class="date">
              <time datetime="<%= article.date.strftime("%Y-%m-%d") %>" itemprop="datePublished"><%= article.date.strftime('%b %e') %></time>
            </span>
          </h2>
          <%= article.summary %>
          <%= link_to 'Read moreâ€¦', article %>
        </li>
      <% end %>
    </div>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
